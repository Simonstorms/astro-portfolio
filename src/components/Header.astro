---
interface Props {
    currentPage?: string;
}

const { currentPage = "projects" } = Astro.props;
---

<header>
    <nav>
        <a href="/" class:list={[{ active: currentPage === "projects" }]}>
            Projects
            {currentPage === "projects" && <span class="dot" />}
        </a>
        <a
            href="/believes"
            class:list={[{ active: currentPage === "believes" }]}
        >
            Believes
            {currentPage === "believes" && <span class="dot" />}
        </a>
        <a href="/magic" class:list={[{ active: currentPage === "magic" }]}>
            <span class="sparkle">âœ¦</span> Magic
            {currentPage === "magic" && <span class="dot" />}
        </a>
    </nav>
</header>

<style>
    header {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 24px 0;
    }

    .logo {
        font-size: 15px;
        font-weight: 500;
        color: #666;
    }

    nav {
        display: flex;
        gap: 32px;
    }

    nav a {
        position: relative;
        font-size: 15px;
        color: #1a1a1a;
    }

    nav a:hover {
        color: #666;
    }

    .dot {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        bottom: -14px;
        width: 5px;
        height: 5px;
        background: #1a1a1a;
        border-radius: 50%;
    }

    .sparkle {
        font-size: 12px;
    }
</style>
