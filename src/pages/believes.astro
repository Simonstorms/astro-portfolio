---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import { Image } from "astro:assets";
import crazyMe from "../assets/crazyme.jpeg";
---

<Layout
    title="Believes - Simon Gneuss"
    description="Personal beliefs and principles I live by. Truth matters, do the hard thing, action creates information."
>
    <Header currentPage="believes" />

    <main>
        <section class="hero">
            <h1>Believes</h1>
            <p class="intro">Things I live by.</p>
        </section>

        <section class="beliefs">
            <p>Truth matters.</p>
            <p>Have lines you won't cross.</p>
            <p>Action creates information.</p>
            <p>Do the hard thing.</p>
            <p>Build systems where you can't cheat.</p>
        </section>

        <section class="photo">
            <Image src={crazyMe} alt="Crazy me" class="photo-img" />
        </section>
    </main>
</Layout>

<style>
    main {
        padding-bottom: 80px;
    }

    .hero {
        padding: 48px 0 80px;
    }

    h1 {
        font-family: "Cormorant Garamond", serif;
        font-style: italic;
        font-size: 40px;
        font-weight: 600;
        margin-bottom: 16px;
    }

    .intro {
        font-size: 17px;
        line-height: 1.6;
        color: #666;
        max-width: 460px;
    }

    .beliefs {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .beliefs p {
        font-size: 17px;
        line-height: 1.5;
        color: #222;
    }

    .photo {
        margin-top: 64px;
    }

    .photo-img {
        width: 100%;
        max-width: 440px;
        height: auto;
        border-radius: 8px;
        filter: brightness(0.8);
    }
</style>
